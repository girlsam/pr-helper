{
  "name": "Pull Request Template Helper",
  "version": "0.1",
  "description": "Injects markdown template into PR descriptions.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_locale": "en",
    "default_popup": "popup.html",
    "default_title": "Markdown template for Pull Requests"
  },
  "icons": {
    "16": "./icons/checklist_16.png",
    "32": "./icons/checklist_32.png",
    "48": "./icons/checklist_48.png",
    "128": "./icons/checklist_128.png"
  }
}